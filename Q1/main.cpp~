#include <iostream>
#include "Map.h"


int main()
{
  int n;
  std::cout <<"Please Enter n:"<< std::endl;
  std::cin >> n;
  Map map1{n};
  std::cout << "Section 1:" << std::endl;
  map1.showMap();
  std::cout << std:: endl;
  map1.findRoutea();
  std::cout << "Distance is:" << map1.findRoutea() << std::endl;
  std::cout << "Best Route is:" << std::endl;
  map1.showRoutea();
  std::cout << "Section B:" << std::endl;
  map1.findRouteb();
  std::cout << "Distance is:" << map1.findRouteb() << std::endl;
  map1.showRouteb();
  std::cout << "Section C:" << std::endl;
  map1.findRoutec();
  return 0;
}
